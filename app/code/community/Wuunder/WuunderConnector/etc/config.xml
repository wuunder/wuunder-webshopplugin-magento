<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Wuunder_WuunderConnector>
            <version>3.0.0</version>
        </Wuunder_WuunderConnector>
    </modules>
    <global>
        <fieldsets>
            <sales_convert_quote>
                <dpd_parcelshop_id>
                    <to_order>*</to_order>
                </dpd_parcelshop_id>
            </sales_convert_quote>
        </fieldsets>
        <blocks>
            <wuunderconnector>
                <class>Wuunder_WuunderConnector_Block</class>
            </wuunderconnector>
        </blocks>
        <helpers>
            <wuunderconnector>
                <class>Wuunder_WuunderConnector_Helper</class>
            </wuunderconnector>
        </helpers>
        <models>
            <wuunderconnector>
                <class>Wuunder_WuunderConnector_Model</class>
                <resourceModel>wuunderconnector_mysql4</resourceModel>
            </wuunderconnector>
            <wuunderconnector_mysql4>
                <class>Wuunder_WuunderConnector_Model_Mysql4</class>
                <entities>
                    <shipments>
                        <table>wuunder_shipments</table>
                    </shipments>
                </entities>
            </wuunderconnector_mysql4>
            <wuundercarrier>
                <class>Wuunder_WuunderConnector_Model</class>
            </wuundercarrier>
            <sourcemodel>
                <class>Wuunder_WuunderConnector_Model</class>
            </sourcemodel>
        </models>
        <events>
            <sales_order_grid_collection_load_before>
                <observers>
                    <wuunderconnector>
                        <model>wuunderconnector/observer</model>
                        <method>salesOrderGridCollectionLoadBefore</method>
                    </wuunderconnector>
                </observers>
            </sales_order_grid_collection_load_before>
            <adminhtml_widget_container_html_before>
                <observers>
                    <wuunderconnector>
                        <model>wuunderconnector/observer</model>
                        <method>adminhtmlWidgetContainerHtmlBefore</method>
                    </wuunderconnector>
                </observers>
            </adminhtml_widget_container_html_before>
            <adminhtml_block_html_before>
                <observers>
                    <wuunderconnector>
                        <model>wuunderconnector/observer</model>
                        <method>adminhtmlBlockHtmlBefore</method>
                    </wuunderconnector>
                </observers>
            </adminhtml_block_html_before>
            <core_block_abstract_to_html_after>
                <observers>
                    <dpdshipping>
                        <class>wuunderconnector/observer</class>
                        <method>coreBlockAbstractToHtmlAfter</method>
                    </dpdshipping>
                </observers>
            </core_block_abstract_to_html_after>
            <checkout_controller_onepage_save_shipping_method>
                <observers>
                    <dpdshipping>
                        <type>singleton</type>
                        <class>wuunderconnector/observer</class>
                        <method>checkout_controller_onepage_save_shipping_method</method>
                    </dpdshipping>
                </observers>
            </checkout_controller_onepage_save_shipping_method>
            <controller_action_predispatch_onestepcheckout_ajax_save_billing>
                <observers>
                    <dpdshippingonestepbilling>
                        <type>singleton</type>
                        <class>wuunderconnector/observer</class>
                        <method>controller_action_predispatch_onestepcheckout_ajax_save_billing</method>
                    </dpdshippingonestepbilling>
                </observers>
            </controller_action_predispatch_onestepcheckout_ajax_save_billing>
            <checkout_submit_all_after>
                <observers>
                    <dpdshippingonestepsave>
                        <class>wuunderconnector/observer</class>
                        <method>checkout_submit_all_after</method>
                    </dpdshippingonestepsave>
                </observers>
            </checkout_submit_all_after>
        </events>
        <resources>
            <wuunderconnector_setup>
                <setup>
                    <module>Wuunder_WuunderConnector</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </wuunderconnector_setup>
            <wuunderconnector_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </wuunderconnector_write>
            <wuunderconnector_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </wuunderconnector_read>
        </resources>
    </global>
    <frontend>
        <routers>
            <wuunderconnector>
                <use>standard</use>
                <args>
                    <module>Wuunder_WuunderConnector</module>
                    <frontName>wuunderconnector</frontName>
                </args>
            </wuunderconnector>
        </routers>
        <translate>
            <modules>
                <wuunderconnector>
                    <files>
                        <default>Wuunder_WuunderConnector.csv</default>
                    </files>
                </wuunderconnector>
            </modules>
        </translate>
    </frontend>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <wuunder_wuunderconnector before="Mage_Adminhtml">Wuunder_WuunderConnector_Adminhtml</wuunder_wuunderconnector>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <wuunderconnector>
                    <file>wuunder/wuunderconnector.xml</file>
                </wuunderconnector>
            </updates>
        </layout>
        <translate>
            <modules>
                <wuunderconnector>
                    <files>
                        <default>Wuunder_WuunderConnector.csv</default>
                    </files>
                </wuunderconnector>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <dpd>
                    <file>wuunder_wuunderconnector.xml</file>
                </dpd>
            </updates>
        </layout>
    </frontend>
    <default>
        <wuunderconnector>
            <connect>
                <testmode>1</testmode>
                <country>NL</country>
                <loggingenabled>0</loggingenabled>
                <wuunder_enabled_shipping_methods>wuunder_default_all_selected</wuunder_enabled_shipping_methods>
            </connect>
            <magentoconfig>
            </magentoconfig>
        </wuunderconnector>
        <carriers>
            <wuunder>
                <active>0</active>
                <model>wuundercarrier/carrier_wuunder</model>
                <title>Wuunder</title>
                <name>Wuunder</name>
                <sort_order>10</sort_order>
                <sallowspecific>0</sallowspecific>
            </wuunder>
            <wuunderdpd>
                <active>0</active>
                <model>wuundercarrier/carrier_wuunderdpd</model>
                <title>DPD parcelshop</title>
                <name>Wuunder DPD</name>
                <sort_order>20</sort_order>
                <sallowspecific>0</sallowspecific>
            </wuunderdpd>
        </carriers>
    </default>

</config>